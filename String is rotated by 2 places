class Solution {
  public:
    // Function to check if a string can be obtained by rotating
    // another string by exactly 2 places.
    bool isRotated(string& s1, string& s2) {
        // Your code here
        if(s1.size()!= s2.size()) return 0;
        string clockwise=s1, anticlockwise=s1;
        int n =s1.size();
        rotateclockwise(clockwise,n);
        rotateclockwise(clockwise,n);
        if(clockwise==s2) return 1;
        rotateanticlockwise(anticlockwise,n);
         rotateanticlockwise(anticlockwise,n);
         if(anticlockwise==s2) return 1;
         
    return 0;
    }
     void rotateclockwise(string & s, int n){
         char c= s[n-1];
         int index=n-2;
         while(index>=0){
             s[index+1]=s[index];
             index--;
         }
         s[0]=c;
     }
     void rotateanticlockwise(string & s, int n){
         char c= s[0];
         int index=1;
         while(index<n){
              s[index-1]= s[index];
              index++;
         }
          s[n-1]=c;
     }
};
